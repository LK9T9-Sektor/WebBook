@model WebBook.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="text-center">
    <h1>Регистрация</h1>
</div>

<fieldset align="center">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" />
                <p><span asp-validation-for="Email" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
                <p><span asp-validation-for="Password" class="text-danger"></span></p>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <p><span asp-validation-for="ConfirmPassword" class="text-danger"></span></p>
            </div>
            <div>
                <input type="submit" value="Регистрация" />
                <a asp-action="Login" asp-controller="Account">Войти</a>
            </div>
        </div>
    </form>
</fieldset>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
